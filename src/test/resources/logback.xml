<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="true">
	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
		<resetJUL>true</resetJUL>
	</contextListener>

	<!-- To enable JMX Management -->
	<jmxConfigurator />

	<appender name="RootAppender" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>
				%d;%logger;%thread;%level;%m%n
			</pattern>
		</encoder>
	</appender>

	<appender name="SysoutAppender" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>
				%d;ACCELERATE;%logger;%thread;%level;%X{customInfo};%m%n
			</pattern>
		</encoder>
	</appender>

	<appender name="SyserrAppender" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>
				%d;%logger;%thread;%level;%m%n
			</pattern>
		</encoder>
	</appender>

	<logger name="accelerate" level="debug" additivity="false">
		<appender-ref ref="SysoutAppender" />
	</logger>

	<logger name="accelerate.utils.logging.LoggerAspect" level="debug"
		additivity="false">
		<appender-ref ref="SyserrAppender" />
	</logger>

	<root level="info">
		<appender-ref ref="RootAppender" />
	</root>
</configuration>
